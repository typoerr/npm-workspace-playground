{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": [
      "es2019"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "packages/*"
      ]
    },
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "packages/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}